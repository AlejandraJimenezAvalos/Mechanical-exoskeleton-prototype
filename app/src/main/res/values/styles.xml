<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pinkDark</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/blueDark</item>
    </style>

    <style name="AppTheme.withe">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.rosa">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/pinkDark</item>
    </style>

    <style name="AppTheme.azul">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/whiteDark</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextView.titulo">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView.rosa">
        <item name="android:textColor">@color/pinkDark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextView.rosa.titulo">
        <item name="android:textColor">@color/pinkDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextView.ocuro">
        <item name="android:textColor">@color/blueDark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button.borde">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_border_pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button.blanco">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:background">@drawable/button_withe</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pinkDark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button.gris">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:background">@drawable/button_gris</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button.verde">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:background">@drawable/button_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button.borde.gris">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:background">@drawable/button_border_gris</item>
        <item name="android:textColor">@color/blueDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextField">
        <item name="android:layout_margin">16sp</item>
        <item name="android:drawablePadding">10sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">15sp</item>
        <item name="android:paddingEnd">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_border_withe</item>
    </style>

    <style name="TextField.rosa">
        <item name="android:layout_margin">16sp</item>
        <item name="android:drawablePadding">10sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">15sp</item>
        <item name="android:paddingEnd">15sp</item>
        <item name="android:textColor">@color/blueDark</item>
        <item name="android:background">@drawable/button_border_pink</item>
    </style>

    <style name="EditText">
        <item name="android:layout_margin">10sp</item>
        <item name="android:padding">12sp</item>
        <item name="paddingStart">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:autofillHints" tools:ignore="NewApi">0</item>
        <item name="android:textColorHint">#283751</item>
    </style>

</resources>
