<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlActivity"
    style="@style/AppTheme.blue"
    android:gravity="fill">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contrain_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_border_right"
        android:gravity=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/button_finish_main"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_margin="16sp"
            android:layout_marginStart="16sp"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="16sp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_left"
            android:tint="@color/pink"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription,UnusedAttribute"
            tools:targetApi="m" />

        <TextView
            android:id="@+id/textView11"
            style="@style/TextView.titulo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/controles_del_exoesqueleto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_finish_main"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="180dp"
        app:layout_constraintBottom_toTopOf="@+id/button_stop"
        app:layout_constraintTop_toBottomOf="@+id/contrain_main"
        tools:layout_editor_absoluteX="-16dp">

    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button_stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager2">

        <ImageView
            android:id="@+id/radio_1"
            android:layout_width="16sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8sp"
            android:src="@drawable/ic_radio_button_checked"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/radio_2"
            android:layout_width="16sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8sp"
            android:src="@drawable/ic_radio_button_unchecked"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/radio_3"
            android:layout_width="16sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8sp"
            android:src="@drawable/ic_radio_button_unchecked"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/radio_4"
            android:layout_width="16sp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_radio_button_unchecked"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <Button
        android:id="@+id/button_stop"
        style="@style/Button.borde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:text="@string/detener"
        app:layout_constraintBottom_toTopOf="@+id/button_desconect"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/button_desconect"
        style="@style/Button.borde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:text="@string/desconectar"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>